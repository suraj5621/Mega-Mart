    <% layout('/layouts/boilerplate') %>
    <%- include('../partials/navbar') %>
    <%- include('../partials/flash') %>

  


    <div class="container mt-5" style="border-radius: 20px;">
      <div class="row">
        <% for(let item of products){ %>
        <div class="col-md-3 col-sm-6">
          <div class="product-grid">
            <div class="product-image">
              <a href="#" class="image">
                <img class="pic-1" src="<%=item.img%>">
              </a>

              <% if(Math.floor(Math.random()*20) % 2==0){ %>
              <span class="product-sale-label">Sale!</span>
              <% } else{ %>
              <span></span>
              <% } %>

              <!-- <ul class="social">
                <li><a href="#" data-tip="Add to Wishlist"><i class="fa fa-heart"></i></a></li>
                <li><a href="#" data-tip="Compare"><i class="fa fa-random"></i></a></li>
                <li><a href="#" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
              </ul> -->
            </div>
            <div class="product-content">
              <span class="product-category"><a href="#"><%=item.category%></a></span>
              <h3 class="title"><a href="#"><%=item.name%></a></h3>
              <ul class="rating">
                <li class="fas fa-star">
                <li class="fas fa-star"></li>
                <li class="fas fa-star"></li>
                <li class="fas fa-star"></li>
                <li class="fas fa-star"></li>
                <li>(<%=item.reviews.length%> reviews)</li>
                </li>

                <!-- <li>(2 review)</li> -->


              </ul>
              <p> <%=item.desc %></p>

              <div class="price">$<%=item.price %></div>
              <div style="display: flex; margin-left: 5%; margin-top: 2%;">
                <a class="add-to-cart" href="/products/<%= item.id %>" data-tip="view product">View product</a>
                <% if(!currentUser){ %>
                <a class="add-to-cart" style="margin-left: 45%;" href="/products/<%= item.id %>" data-tip="view product">WishList Add</a>
                <%}%>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    
    <%- include('../partials/footer') %>
    </body>

    </html>