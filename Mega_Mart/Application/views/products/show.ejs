    <% layout('/layouts/boilerplate') %>
    <%- include('../partials/navbar') %>
    <%- include('../partials/flash') %>



    <div class="gg">

      <div class="container py-4 my-4 mx-auto d-flex flex-column">
        <div class="header">
          <div class=" r1" style="display: flex;">
            <div class="col-md-7"> <img src=" <%=foundProduct.img%>" width="70%" height="100%"> </div>
            <div class="col-md-9 abc">
              <h1><%=foundProduct.name%></h1>
              <div class=" myt   d-flex flex-column mt-2"> <%=foundProduct.reviews.length%> reviews</div>
              <div class="col-md-3 text-right pqr"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>

              <div class=" myt   d-flex  mt-2">
                <h3 class=""><strong>Price : </strong> <%=foundProduct.price%></h3>
              </div>

              <div class=" myt   d-flex  mt-2"><strong> Description : &nbsp;</strong> <%=foundProduct.desc%></div>
              <div class=" myt   d-flex flex-column  mt-2"><strong> Available Offers : &nbsp;</strong>


                <li class="lit"><i class="fa-solid fa-tag"></i> Bank Offer10% off on HDFC Bank Credit Card Transactions <a href="#"> T&C</a></li>
                <li class="lit"><i class="fa-solid fa-tag"></i> Bank Offer5% off on Axis Bank Credit Card Transactions <a href="#"> T&C</a></li>
                <li class="lit"><i class="fa-solid fa-tag"></i> Bank Offer5% off on ICICI Bank Credit Card Transactions <a href="#"> T&C</a></li>
                <li class="lit"><i class="fa-solid fa-tag"></i> Bank Offer2% off on SBI Bank Credit Card Transactions <a href="#"> T&C</a></li>


              </div>
            </div>




          </div>
          <div class="d-flex  mt-4 ;" style="width: 140%; justify-content: start;">


            <div class="col-md-2 myt mr-2">
              <form action="/user/<%=foundProduct.id%>/add" method="post">

                <button class="btn btn-outline-success">Add to cart</button>

              </form>
            </div>


            <div class="col-md-2 myt mr-2">
              <form action="/user/<%=foundProduct.id%>/addwishlist" method="post">

                <button class="btn btn-outline-success">Add wishlist</button>

              </form>
            </div>

            


            <div class="col-md-2 myt mr-2 "><button type="button" class="btn btn-outline-success"><a href="#">BUY NOW</a></button></div>

            <% if(currentUser && currentUser.role === "seller"){ %>
            <div class="col-md-2 myt mr-2 "><button type="button" class="btn btn-outline-success"><a href="/products/<%=foundProduct.id%>/edit">Edit</a></button></div>
            <div class="col-md-2 myt mr-2 ">

              <form class="d-inline-block" action="/products/<%=foundProduct.id%>?_method=DELETE" method="POST">
                <button class="btn btn-outline-danger">Delete</button>
              </form>
            </div>
            <% } %>
          </div>

        </div>
        <div style="display: flex; justify-content: space-evenly;">

          <div class="containery-body mt-4">



            <ul>
              <h3><strong>Details</strong></h3>
              <li class="lit">100% Quality</li>
              <li class="lit">Free Shipping</li>
              <li class="lit">Easy Returns</li>
              <li class="lit">12 Months Warranty</li>
              <li class="lit">EMI Starting from (On Credit Cards)</li>
              <li class="lit">Normal Delivery : 4-5 Days</li>
              <li class="lit">Express Delivery : 2-3 Days</li>
              <li class="lit">COD Available (All Over India)</li>
            </ul>

            <!-- <div class=""> <img src=" <%=foundProduct.img%>" width="80%" height="80%"> </div> -->

          </div>
          <div style="width: 250px;"> </div>

          <div class="col-lg-4">
            <h1 class="display-5">Leave a Review</h1>
            <form action="/products/<%=foundProduct._id%>/review" method="POST">
              <div>
                <fieldset class="starability-basic">
                  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="rating" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="rating" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="rating" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="rating" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="rating" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              <div class="mb-3">
                <label class="form-label" for="comment">Comment: </label>
                <textarea class="form-control" row="3" name="comment" id="comment"></textarea>
              </div>

              <button class="btn btn-sm btn-success">Add Review</button>
            </form>




          </div>
        </div>
      </div>





      <div class="z36">

        <% for(let review of foundProduct.reviews){ %>

        <figure class="snip1533">
          <figcaption>
            <blockquote>
              <p>Comment: <%=review.comment %></p>
            </blockquote>
            <h3>Rated: <%=review.rating %> stars</h3>
            <h4><% if(review.createdAt){ %>
              <%=review.createdAt.toDateString() %>
              <% } %></h4>
          </figcaption>
          <a href="#" class="btn btn-primary mb-2">Delete</a>
        </figure>


        <% } %>



      </div>
    </div>


    </body>

    <!-- adding boostrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

    </html>